    <body>

        <div class="container">

            <div class="header">

                <div class="logo">
                    <a class="home-pic" href="/home"></a>
                </div>

                <div class="header-right">

                    {% if loggedIn %}
                        <p><a class="nav-auth" href="/logged_out">Log out</a></p>
                    {% else %}
